{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2023",
      "ScriptHost"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2023",
    "useDefineForClassFields": false,
    "paths": {
      "@meshclaw/plugin-sdk": [
        "./src/plugin-sdk/index.ts"
      ],
      "@meshclaw/plugin-sdk/*": [
        "./src/plugin-sdk/*.ts"
      ],
      "@meshclaw/plugin-sdk/account-id": [
        "./src/plugin-sdk/account-id.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "ui/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}